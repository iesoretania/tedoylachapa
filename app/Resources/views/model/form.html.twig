{% trans_default_domain 'model' %}
{% extends 'layout.html.twig' %}
{% import 'macros.html.twig' as m %}
{% block content %}
    {% if model.image %}
        <img src="{{ path('api_model_image', {'code': model.code}) }}" width="100" height="100"/>
    {% endif %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ m.start_button() }}
        {{ m.link_button(last_url, 'arrow-left', 'btn-info', 'form.back'|trans) }}
        {{ m.submit_button('submit', 'check', 'btn-success', 'form.save'|trans) }}
    {{ m.end_button() }}
    {{ form_end(form) }}
{% endblock %}
